<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.librigo.Controller.LibraireCreateElementsController"
            prefWidth="900" prefHeight="600"
            stylesheets="@../css/global.css, @../css/libraireCreateElements.css">

